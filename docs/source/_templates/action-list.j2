{% for title, desc, link, icon in actions %}
  {% if loop.index0 is divisibleby(3) %}
    <div class="card-deck use-cases">
  {% endif %}
  <div class="card">
    <a href="{{ link }}">
      <div class="card-body">
        <h5 class="card-title">
          <i class="fas fa-{{icon}} text-primary"></i>
          {{ title }}
        </h5>
        <p class="card-text">
          {{ desc }}
        </p>
      </div>
    </a>
  </div>
  {% if (loop.index0 + 1) is divisibleby(3) %}
    </div>
  {% endif %}
{% endfor %}
